---
import Layout from '../layouts/Layout.astro';
import akaWonderImage from '../assets/akawonder.png';
---

<Layout title="AKACompos - Composiciones de AKAWonder">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
		<div class="text-center max-w-4xl mx-auto">
			<!-- Streamer Image -->
			<div class="mb-8">
				<div class="relative inline-block">
					<img 
						src={akaWonderImage.src} 
						alt="AKAWonder" 
						class="w-48 h-48 md:w-64 md:h-64 rounded-full mx-auto object-cover shadow-2xl border-4 border-primary-light/30"
					/>
				</div>
			</div>

			<!-- Title -->
			<div class="mb-6">
				<h1 class="text-4xl md:text-6xl font-black text-white mb-4">
					AKACompos
				</h1>
				<p class="text-lg md:text-xl text-slate-300 mb-8">
					Las mejores composiciones de <span class="text-gold font-semibold">AKAWonder</span><br>
					para dominar en Teamfight Tactics
				</p>
			</div>

			<!-- Action Buttons -->
			<div class="flex flex-col sm:flex-row items-center justify-center gap-6">
				<a
					href="/compositions"
					class="inline-flex items-center gap-3 px-8 py-4 rounded-2xl bg-gradient-primary text-white font-bold shadow-primary"
				>
					<span class="material-symbols-outlined">apps</span>
					Ver Composiciones
				</a>
				
				<a
					href="https://twitch.tv/akawonder"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-3 px-8 py-4 rounded-2xl border-2 border-purple-500/50 text-primary-light font-bold backdrop-blur-sm"
				>
					<span class="material-symbols-outlined">live_tv</span>
					Ver Canal
				</a>
			</div>
		</div>
	</div>
</Layout>
