---
import Layout from '../layouts/Layout.astro';
import TFTBoardCharacter from '../components/TFTBoardCharacter.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<main class="container">
		<div class="text-2xl font-bold mb-8">AKACompos</div>
		
		<div class="hexagon-examples">
			<h2 class="text-xl mb-4">Ejemplos de Hexágonos</h2>
			
			<div class="hexagon-grid">
				<!-- Hexágono con imagen por defecto y borde azul -->
				<TFTBoardCharacter />
				
				<!-- Hexágono con borde rojo -->
				<TFTBoardCharacter champion='Aatrox' />
				
				<!-- Hexágono con borde verde -->
				<TFTBoardCharacter champion='Gwen' />
				
				<!-- Hexágono más pequeño con borde morado -->
				<TFTBoardCharacter />
				
				<!-- Hexágono más grande con borde dorado -->
				<TFTBoardCharacter />
			</div>
		</div>
	</main>
	
	<style>
		.container {
			padding: 2rem;
			max-width: 1200px;
			margin: 0 auto;
		}
		
		.hexagon-examples {
			margin-top: 2rem;
		}
		
		.hexagon-grid {
			display: flex;
			flex-wrap: wrap;
			gap: 2rem;
			align-items: center;
			justify-content: center;
		}
		
		.text-2xl {
			font-size: 1.5rem;
			line-height: 2rem;
		}
		
		.text-xl {
			font-size: 1.25rem;
			line-height: 1.75rem;
		}
		
		.font-bold {
			font-weight: 700;
		}
		
		.mb-8 {
			margin-bottom: 2rem;
		}
		
		.mb-4 {
			margin-bottom: 1rem;
		}
	</style>
</Layout>