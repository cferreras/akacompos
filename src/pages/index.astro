---
import Layout from '../layouts/Layout.astro';
import TFTBoard from '../components/TFTBoard.astro';
---

<Layout title="TFTComps - Home">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-6xl font-bold text-slate-900 dark:text-white mb-4">
				<span class="text-primary-light">TFT</span>Comps
			</h1>
			<p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
				Discover the best Teamfight Tactics compositions, items, and strategies to dominate the battlefield.
			</p>
		</div>

		<div class="max-w-4xl mx-auto">
			<h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">Featured Composition</h2>
			<TFTBoard />
			
			<div class="mt-8 text-center">
				<a 
					href="/compositions/cosmic-infiltrators"
					class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-primary text-white font-bold shadow-lg shadow-primary/30 hover:bg-primary-light transition-all"
				>
					View Full Details
					<span class="material-symbols-outlined">arrow_forward</span>
				</a>
			</div>
		</div>
	</div>
</Layout>