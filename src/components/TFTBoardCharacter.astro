  : borderColor;
---

<div class="hexagon-container select-none" style={`--border-color: ${finalBorderColor}; --size: ${size};`}>
  <div class="hexagon">
    {finalImageUrl ? (
      <img src={finalImageUrl} alt={champion ? `${champion} champion` : "Hexagon image"} class="hexagon-image" />
    ) : (
      <div class="empty-slot"></div>
    )}
  </div>
</div>

<style>
  .hexagon-container {
    display: inline-block;
    position: relative;
    width: var(--size);
    height: var(--size);
  }

  .hexagon {
    width: 100%;
    height: 100%;
    position: relative;
    background-color: var(--border-color);
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    border-radius: 0;
    overflow: hidden;
  }

  .hexagon::before {
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    right: 2px;
    bottom: 2px;
    background-color: transparent;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    z-index: 1;
  }

  .hexagon-image {
    position: absolute;
    top: 7px;
    left: 7px;
    right: 7px;
    bottom: 7px;
    width: calc(100% - 14px);
    height: calc(100% - 14px);
    object-fit: cover;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    z-index: 2;
  }

  .empty-slot {
    position: absolute;
    top: 7px;
    left: 7px;
    right: 7px;
    bottom: 7px;
    width: calc(100% - 14px);
    height: calc(100% - 14px);
    background: #3a3a3a ;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    z-index: 2;
    opacity: 0.5;
  }

  /* Alternativa con borde más grueso */
  .hexagon.thick-border::before {
    top: 8px;
    left: 8px;
    right: 8px;
    bottom: 8px;
  }

  .hexagon.thick-border .hexagon-image {
    top: 10px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    width: calc(100% - 20px);
    height: calc(100% - 20px);
  }
</style>